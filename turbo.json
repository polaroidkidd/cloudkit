{
	"$schema": "https://turborepo.org/schema.json",
	"daemon": false,
	"globalDependencies": [".env.development", "tsconfig-base.json", "pnpm-lock.yaml"],
	"globalEnv": [
		"DATABASE_URL",
		"IMAGE_API",
		"IMAGE_API_TOKEN",
		"IMAGE_API_ACCOUNT_IDENTIFIER",
		"IS_CI",
		"SEED_DEV"
	],
	"tasks": {
		"@cloudkit/web#dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["@cloudkit/db-schema#push"],
			"passThroughEnv": ["DATABASE_URL"]
		},
		"@cloudkit/db-schema#push": {
			"cache": false,
			"dependsOn": ["@cloudkit/swagger-ui#sync", "@cloudkit/db-schema#gen"]
		},
		"@cloudkit/db-schema#gen": {
			"cache": false,
			"dependsOn": []
		},
		"@cloudkit/api-mocks#start": {
			"cache": false,
			"dependsOn": []
		},
		"@cloudkit/web#check": {
			"cache": false,
			"dependsOn": ["@cloudkit/db-schema#gen"]
		},
		"@cloudkit/service-contract#build": {
			"cache": false,
			"dependsOn": ["@cloudkit/db-schema#gen"]
		},
		"@cloudkit/swagger-ui#dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["@cloudkit/service-contract#build"]
		},
		"@cloudkit/swagger-ui#build": {
			"cache": false,
			"dependsOn": ["@cloudkit/service-contract#build"]
		},
		"@cloudkit/styleguide#storybook": {
			"cache": false,
			"dependsOn": ["@cloudkit/web#sync", "@cloudkit/swagger-ui#sync"]
		},
		"@cloudkit/web#sync": {
			"cache": false,
			"dependsOn": []
		},
		"@cloudkit/swagger-ui#sync": {
			"cache": false,
			"outputs": ["./svelte-kit"]
		}
	}
}
